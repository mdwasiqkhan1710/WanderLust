<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>Create a New Listing</h3>
        <br>
        <form method="POST" action="/listings"  novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" placeholder="Add a catcy Title" type="text" class="form-control" id="title" required/>
                </div>
                <div class="valid-feedback">Title looks good!</div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" placeholder="Explain the featues of your listing." class="form-control" id="description" required></textarea>
                </div>
                <div class="valid-feedback">Title looks good!</div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload Listing Image</label>
                    <input name="listing[image]" type="file" class="form-control" required/>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" placeholder="e.g. 1200" class="form-control" id="price" required/>
                    </div>
                    <div class="invalid-feedback">Enter a valid price.</div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" placeholder="e.g. India" type="text" class="form-control" id="country" required/>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" placeholder="e.g. Delhi" type="text" class="form-control" id="location" required/>
                </div>
                <br>
                <button class="btn btn-dark add-btn">Add</button>
                <br><br>
            </form>
    </div>
</div>